.label-controll
    .label-controll__caption Расстояние
    .label-controll__body
        .label-controll__content

            .custom-range
                .input-suffix.custom-input#distance
                    input.value(
                        type="text"
                        data-calc-property="distance"
                        value="12"
                    )
                    span.input-suffix__delimiter
                    span.input-suffix__units метров

                .custom-range__controller
                    span.status-bar
                    spna.slider
                    input.custom-range__slide(
                        type="range"
                        step="1"
                        min="1"
                        max="50"
                        value="12"
                        data-calc-property="distance"
                    )