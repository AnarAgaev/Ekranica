// Для активного элемента добавлять класс active
.calc__calculator.calc__calculator_rent.hidden#rentScreen
    .container

        .calc__body
            .calc__body-controllers
                include ../custom-slider-radio/custom-slider-radio-rent-construction
                include ../custom-selects/suffix-select-calc-rent-pixel-step
                include ../custom-selects/suffix-select-calc-rent-width
                include ../custom-selects/suffix-select-calc-rent-height
                include ../custom-input/custom-input-rent-days
                include ../datepicker/datepicker-calc-rent-installment
                include ../custom-checkbox/custom-checkbox-calc-rent-delivery
                include ../custom-checkbox/custom-checkbox-calc-rent-cotroller
                .btn.btn_primary.btn_show-result Рассчитать стоимость

            .calc__body-result
                .calc__body-result-picture
                    img(src="/img/quiz-location-inside.png" alt="")
                .calc__body-result-sum.hidden
                    span Итого:
                    span#calcRentContentSum 2 240 000 ₽
                .btn.btn_primary.calc__body-result-btn.hidden Посмотреть спецификацию

        .calc__specification.hidden.invisible
            .calc__specification-title
                span.title.animation-element  Просмотр спецификации
                span.step.animation-element шаг 2 из 3

            .calc__tab-list.swiper-container
                .calc__tab-list-wrap.swiper-wrapper
                    include calc-tab-list

            .calc__specification-list
                .calc__specification-list-title Спецификация

                .calc__specification-list-short
                    ul
                        li Аредна экрана 2720 x 3420 мм
                        li Доставка за пределы Москвы
                        li Монтаж и настройка оборудования
                        li Техническая консультация
                .calc__specification-list-sum
                    span Итого:
                    span#calcRentSpecificationListSum 2 240 000 ₽

            .calc__specification-table
                include calc-specification-tabel

            .calc__specification-result
                .calc__specification-result-sum
                    span Итого:
                    span#calcRentSpecificationResultSum 2 240 000 ₽
                .calc__specification-result-comment
                    span В расчете указана приблизительная стоимость.
                    br
                    span Для определения более точной стоимости
                    a.link.revers заполните заявку
                .calc__specification-result-set-form
                    .btn.btn_primary Заполнить заявку
                .calc__specification-result-download
                    a.btn.btn_primary(href="" download)
                        spna.icon-prolog
                            include ../../../img/icon-download-btn.svg
                        span.d-none.sm-visible.md-visible Скачать смету
                        span.d-none.lg-visible.xl-visible Скачать спецификацию
                        span.icon-epilogue
                            include ../../../img/icon-arr-btn.svg
                a(href="").calc__specification-result-share
                    span.icon
                        include ../../../img/icon-share.svg
                    | Поделиться спецификацией
                .calc__specification-result-recalc
                    .btn
                        span.icon
                            include ../../../img/icon-calc-btn.svg
                        | Пересчитать




        .calc__order.hidden.invisible
            .calc__order-title
                span.title.animation-element  Отправьте заявку на подробный расчет
                span.step.animation-element шаг 3 из 3

            .calc__tab-list.swiper-container
                .calc__tab-list-wrap.swiper-wrapper
                    include calc-tab-list

            .calc__order-form
                include ../../comps/form-order/form-calc-rent

            .calc__order-result
                .calc__order-result-pic
                    img(src="/img/quiz-location-inside.png" alt="")

                .calc__order-result-list
                    .calc__order-result-list-title Спецификация
                    .calc__order-result-list-short
                        ul
                            li Аредна экрана 2720 x 3420 мм
                            li Доставка за пределы Москвы
                            li Монтаж и настройка оборудования
                            li Техническая консультация
                    .calc__order-result-list-sum
                        span Итого:
                        span#calcRentOrderListSum 2 240 000 ₽

                .calc__order-result-submit
                    .form-order__actions.animation-element
                        .form-order__actions-group
                            span.form-order__privacy
                                | Нажимая на кнопку “Отправить заявку”, я даю согласие на
                                a.revers(href="/") обработку моих персональных данных
                            .form-order__button
                                button.btn.btn_primary.form-order__submit(type="submit") Отправить заявку